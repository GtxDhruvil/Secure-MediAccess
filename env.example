# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_medical_db
DB_USER=postgres
DB_PASSWORD=Dhruvil20@

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
# When set to true (non-production only) includes OTP in API responses for debugging
OTP_DEBUG=false

# Email Configuration (for OTP)
# Option 1: Resend API (preferred for serverless deployments)
RESEND_API_KEY=
EMAIL_FROM=Secure Medi Access <no-reply@securemediaccess.com>

# Option 2: SMTP transport (required if RESEND_API_KEY is empty)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false           # true when using port 465 (SSL/TLS)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_SEND_TIMEOUT=10000     # milliseconds to wait before failing the SMTP send

# Twilio Configuration (for SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Server Configuration
PORT=5000
NODE_ENV=development
